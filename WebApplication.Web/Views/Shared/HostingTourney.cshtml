        <textarea rows="4" cols="50">
            List of hosted Tournaments
            Coming Soon!!
        </textarea>
    </div>
    <div>
        <button class="btn btn-default customT" asp-controller="Tourney" asp-action="SearchUser">Create Tournament</button>
    </div>
